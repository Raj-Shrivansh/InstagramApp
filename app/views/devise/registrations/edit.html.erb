
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'my_form', class: "mt-5"}) do |f| %>
<h2 class="text-center">Account Info <%= resource_name.to_s.humanize %></h2>
    
    <div class="mb-3">
        <%= f.label :"Email :"%>
        <%= f.email_field :email,required:true,class:"form-control",autofocus: true,readonly:true%>
        <% if resource.errors.any? %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
            <p><%= message %></p>
            <% end%>
          <% end %>
    </div>
  <div class="form-actions">
    <%= link_to "Back", :back ,class:"btn btn-warning "%>
  </div>
  <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"%>
<% end %>



