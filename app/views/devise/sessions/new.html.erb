<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {id: 'my_form',class: 'mt-5'}) do |f| %>
<h2 class="text-center">Log in</h2>
    <div class="mb-3">
        <%= f.label :"Email :"%>
        <%= f.email_field :email,required:true,class:"form-control" %>
        <% if resource.errors.any? %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
            <p><%= message %></p>
            <% end%>
          <% end %>
    </div>
    <div class="mb-3">
        <%= f.label :"Password :"%>
        <%= f.password_field :password,required:true,class:"form-control" %>
        <% if resource.errors.any? %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
            <p><%= message %></p>
            <% end%>
          <% end %>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <div class="d-grid gap-2">
    <%= f.button :submit, "Log in",class:"btn btn-lg btn-info mt-2"%>
    <%= render "devise/shared/links" %>
  </div>

<% end %>


